NAME = cub3d
SRCS =	srcs/main.c \
		srcs/init_parameters.c \
		srcs/init_map.c \
		srcs/free.c \
		srcs/utils.c \
		srcs/utils2.c \
		srcs/split.c \
		srcs/get_next_line/get_next_line.c
		

GCC = gcc -Wall -Wextra -Werror

$(NAME):
	$(GCC) $(SRCS) -o $(NAME) libmlx42.a -I include -lglfw -L "/opt/homebrew/Cellar/glfw/3.3.8/lib/"

all: $(NAME)

clean:
	rm $(NAME)

fclean:	clean
	rm -rf $(NAME)

re:	fclean all